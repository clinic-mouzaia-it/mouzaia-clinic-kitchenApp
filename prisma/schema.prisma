// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id BigInt @id
  fullName String
  departement String?
  position String
  level Int
}

model History {
  id       Int      @id @default(autoincrement())
  fullName String
  level Int
  date     DateTime
  period   String
}